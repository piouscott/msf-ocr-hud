{
  "manifest_version": 3,
  "name": "MSF Counter",
  "version": "1.1",

  "background": {
    "scripts": ["bg.js"],
    "service_worker": "bg.js"
  },

  "action": {
    "default_title": "MSF Counter",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/tesseract/tesseract.min.js", "content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "web_accessible_resources": [{
    "resources": [
      "msf-zones-config.json",
      "lib/tesseract/*",
      "modules/*",
      "data/*"
    ],
    "matches": ["<all_urls>"]
  }]
}