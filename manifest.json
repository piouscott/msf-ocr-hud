{
  "manifest_version": 2,
  "name": "MSF Counter",
  "version": "1.1",

  "background": {
    "scripts": ["bg.js"]
  },

  "browser_action": {
    "default_title": "MSF Counter",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "storage",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "msf-zones-config.json",
    "lib/tesseract/*",
    "modules/*"
  ]
}