{
  "manifest_version": 3,
  "name": "MSF Counter",
  "version": "1.3",

  "browser_specific_settings": {
    "gecko": {
      "id": "msf-counter@extension",
      "strict_min_version": "109.0"
    }
  },

  "background": {
    "scripts": ["bg.js"],
    "service_worker": "bg.js"
  },

  "action": {
    "default_title": "MSF Counter",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [{
    "matches": [
      "*://*.marvelstrikeforce.com/*",
      "*://*.scopelypv.com/*",
      "*://*.scopely.io/*",
      "https://*/*",
      "http://*/*"
    ],
    "js": ["lib/tesseract/tesseract.min.js", "content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "webRequest",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "web_accessible_resources": [{
    "resources": [
      "msf-zones-config.json",
      "lib/tesseract/*",
      "modules/*",
      "data/*"
    ],
    "matches": ["<all_urls>"]
  }]
}
